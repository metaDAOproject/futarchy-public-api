    "typecheck": "tsc --noEmit",
    "check:prettier": "prettier --check 'src/**/*.{ts,tsx}'",
    "format:prettier": "prettier --write 'src/**/*.{ts,tsx}'"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^5.0.0",
